<ThingDefs>

  <ThingDef Name="BalancedBaseGun" Abstract="True" ParentName="BalancedBaseWeapon">
		<techLevel>Industrial</techLevel>
		<smeltable>true</smeltable>
		<thingCategories>
      <li>WeaponsRanged</li>
    </thingCategories>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>ArtName_WeaponGun</nameMaker>
        <descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Name="BalancedBaseMakeableGun" ParentName="BalancedBaseGun" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>

  <ThingDef Name="BalancedBaseHumanGun" ParentName="BalancedBaseGun" Abstract="True">
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
  </ThingDef>

  <ThingDef Name="BalancedBaseHumanMakeableGun" ParentName="BalancedBaseMakeableGun" Abstract="True">
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
  </ThingDef>

  <ThingDef Name="BalancedBaseBullet" Abstract="True">
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Projectile</altitudeLayer>
    <thingClass>Bullet</thingClass>
    <label>bullet</label>
    <useHitPoints>False</useHitPoints>
    <neverMultiSelect>True</neverMultiSelect>
    <graphicData>
      <shaderType>Transparent</shaderType>
    </graphicData>
  </ThingDef>

<ThingDef ParentName="BalancedBaseBullet">
  <defName>Bullet_Mehnigun</defName>
  <label>mehni bullet</label>
  <graphicData>
    <texPath>Things/Projectile/Bullet_Small</texPath>
    <graphicClass>Graphic_Single</graphicClass>
  </graphicData>
  <projectile>
    <damageDef>Bullet</damageDef>
    <damageAmountBase>8</damageAmountBase>
    <speed>70</speed>
  </projectile>
</ThingDef>
<ThingDef ParentName="BalancedBaseHumanMakeableGun">
  <defName>Gun_Mehnigun</defName>
  <label>mehni gun</label>
  <description>The best weapon in the game, just like every other weapon. Humanoid-built.</description>
  <graphicData>
    <texPath>Things/Item/Equipment/WeaponRanged/Minigun</texPath>
    <graphicClass>Graphic_Single</graphicClass>
  </graphicData>
  <soundInteract>InteractRifle</soundInteract>
  <statBases>
    <WorkToMake>100000</WorkToMake>
    <Mass>10</Mass>
    <AccuracyTouch>0.40</AccuracyTouch>
    <AccuracyShort>0.32</AccuracyShort>
    <AccuracyMedium>0.08</AccuracyMedium>
    <AccuracyLong>0.01</AccuracyLong>
    <RangedWeapon_Cooldown>1.66</RangedWeapon_Cooldown>
  </statBases>
  <costList>
    <Steel>160</Steel>
    <Component>20</Component>
  </costList>
  <recipeMaker>
    <researchPrerequisite>MultibarrelWeapons</researchPrerequisite>
  </recipeMaker>
  <techLevel>Industrial</techLevel>
  <weaponTags>
    <li>GunHeavy</li>
  </weaponTags>
  <equippedStatOffsets>
    <MoveSpeed>+2.5</MoveSpeed>
  </equippedStatOffsets>
  <verbs>
    <li>
      <verbClass>Verb_Shoot</verbClass>
      <hasStandardCommand>true</hasStandardCommand>
      <projectileDef>Bullet_Mehnigun</projectileDef>
      <warmupTime>3.0</warmupTime>
      <range>32</range>
      <burstShotCount>50</burstShotCount>
      <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
      <soundCast>ShotMinigun</soundCast>
      <soundCastTail>GunTail_Medium</soundCastTail>
      <muzzleFlashScale>9</muzzleFlashScale>
    </li>
  </verbs>
